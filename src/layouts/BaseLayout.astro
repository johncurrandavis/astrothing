const { title } = Astro.props;
import "../styles/global.css";
---

<html lang="en">

  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css">
  </head>

  <body>

    <header>
      <nav>
        <a href="/">Home</a> |
        <a href="/about">About</a>
      </nav>
    </header>

    <main>
      <slot />  <!-- Your page content will be inserted here -->
    </main>

    <footer>
      <p>&copy; {new Date().getFullYear()} My Site</p>
    </footer>

  </body>

</html>

